doctype 5
html(lang="en")
  head
    link(rel="stylesheet", href="/stylesheets/grid.css")
    title
      | #{pageTitle}
    script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
  body
    a(href='/profile?id=' + userid)
        .title.pink
            | Home
    if search
        br
        form(method="get")
            | Search: <input type="text" name="q"> <input type="submit" value="Search">
        #buttons
            a.tab.blue(href="/search/users")
                | Users
            a.tab.blue(href="/search/photos")
                | Photos
            a.tab.blue(href="/search/interests")
                | Interests
            a.tab.blue(href="/search/web")
                | Web
    #container
        block results
    script.
        window.glob = 0;
        $('.img').hover(
            function(e) {
                var str =
                    '<img src="' + $(this).attr('src') + '" class="big ' +
                    (e.pageX < $(window).width() / 2 ? 'right' : 'left') + '" ' +
                    'id="big' + window.glob + '">';
                $('#container').append(str);
                var i = $(window).scrollTop() + $('#container').position().top;
                $('#big' + window.glob).css({top:i});
                $('.img').css({opacity:0.4});
            },
            function() {
                $('#big' + window.glob++).remove();
                $('.img').css({opacity:1});
            }
        );


// Jade file to specify output of an actors list
// Inherits from layout
extend layout
block content
  h1 #{title}
  
  // Get back to logged in users home page
  tr
    td
      a(href="/home?id="+session_userid) Home <br/>
      <br/>

  if session_userid==queried_userid
    // If this is currently logged in user's page then only let him add a new board
    tr
      td
        a(href="/createnewboard?id="+queried_userid) Create a new Board <br/>
        <br/>    
  
  // Create a table with one row per result
  table(border='1')
    - for (var inx = 0; inx < results.length; inx++)
        tr
          td
            a(href="/boards/boardpins?id=" + queried_userid + "&bid=" + results[inx].BID) #{results[inx].BN}
          td 
            img(src=results[inx].BOARD_PIC, height="240" width="320")
          td=results[inx].COUNTER


          
  
